<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="en"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="example.conference">
  <body>

    <metal:main fill-slot="main">
      <tal:main-macro metal:define-macro="content-core" >

        <metal:macro use-macro="context/ace_macros/macros/ace_layout">

          <div metal:fill-slot="ace-top-slot">
            <a href="" tal:attributes="href view/link_to_original">Original</a>
            <h2>Information Portal</h2>
            <h1 tal:content="context/title">Title here</h1>
          </div>

          <div metal:fill-slot="ace-left-slot">
            <h3>Description</h3>
            <div tal:content="structure context/long_description/output">description here</div>

            <h4>Reference information</h4>
            <h5>Websites:</h5>
                <div tal:content="structure context/websites/output">Website</div>

            <h5>Source:</h5>
            <tal:block content="structure context/source/output" />
          </div>

          <div metal:fill-slot="ace-right-slot">

            <h4>Keywords</h4>
            <tal:block content="structure context/keywords" />

            <h4>Climate impacts</h4>
            <tal:block content="structure python:view.w['climate_impacts'].render()" />

            <h4>Elements</h4>
            <tal:block content="structure python:view.w['elements'].render()" />

            <h4>Sectors</h4>
            <tal:block content="structure python:view.w['sectors'].render()" />

            <h4>Geographic characterisation</h4>
            <tal:block content="structure context/spatial_layer" />
          </div>

        </metal:macro>

      </tal:main-macro>
    </metal:main>

  </body>
</html>
