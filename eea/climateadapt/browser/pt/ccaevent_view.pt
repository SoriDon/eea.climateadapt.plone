<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xml:lang="en"
  lang="en"
  metal:use-macro="context/main_template/macros/master"
  >

<body>
    <metal:main fill-slot="body">
        <tal:def tal:define="data nocall:view/data;">


<style>
.aceitem_page h2,
.macro-category h4
{
    color:#007cb9;
}
.aceitem_page h5 {
    color:#007cb9;
    text-decoration:italic !important;
    margin:0px;
    padding-top:5px;
}
.macro-category{
    margin:0px;
    padding-top:5px;
}
.macro-category h4{
    color:#007cb9;
    text-decoration:italic !important;
    margin:0px;
    padding-top:5px;
}
.aceitem_page h2 {
    padding-top:20px;
}

</style>
<script>
$( document ).ready(function() {
    var data_detail = $('#event_summary_data dl > div:first div.col-md-10').html();
    data_detail = data_detail.replace('from','<br>');
    data_detail = data_detail.replace('class="dtend"','');
    data_detail = data_detail.replace(/abbr/g,'span');
    data_detail = data_detail.replace('<span class="timezone">','<br><span class="timezone">');
    $('#event_date_detail').html(data_detail);
});
</script>
            <div id="content" class="columned">

                  <div class="aceitem_page">


                    <div class="scroll-to-top"><span class="scroll-button" title="Scroll to top"> <i class="scroll-icon glyphicon glyphicon-chevron-up"></i> </span></div>
                    <div id="content-core">
                        <div class="col-md-9 col-xs-12 content-column">
                            <a href="">Event</a> | <a href="#agenda">Agenda and supporting documents</a> | <a href="#information">Practical Information</a> | <a href="#registration" tal:condition="context/online_registration">Registration</a>
                            <br><br>
                            <h1>Climate-ADAPT Event</h1>
                            <div>
                                <img tal:condition="context/image" style="float:left; padding-right:10px;padding-bottom:10px;" src="" tal:attributes="src python:context.absolute_url_path()+'/@@images/image/preview'">
                                <h2 style="padding-top:0px;" tal:content="structure data/title">Climate-ADAPT Event Title</h2>
                                <h3 style="padding-top:0px;" tal:condition="context/subtitle" tal:content="structure context/subtitle">Climate-ADAPT Event Sub Title</h3>
                                <p id="parent-fieldname-text" tal:condition="data/description" tal:content="structure data/description" />
                            </div>

                            <div id="parent-fieldname-text" style="clear:both; padding-top:20px;" tal:condition="data/text">
                              <tal:text content="structure data/text" />
                            </div>

                            <div style="display:none;" id="event_summary_data">
                                <tal:eventsummary replace="structure context/@@event_summary"/>
                            </div>

                            <a name="agenda"></a>
                            <h2>Agenda and supporting documents</h2>
                            <tal tal:condition="context/agenda_file">
                            <p style="padding-top:15px;">Download the detailed agenda <a tal:attributes="href python:context.absolute_url_path()+'/@@download/agenda_file/'+context.agenda_file.filename">here</a></p>
                            </tal>
                            <div style="border:1px solid #ddd;padding:15px;" tal:content="structure context/agenda/output"></div>

                            <a name="information"></a>
                            <h2>Practical information</h2>
                            <h5 style="padding-top:0px;">Participation</h5>
                            <p tal:content="structure context/participation/output"></p>

                            <tal tal:condition="context/contact_email">
                            <h5>Contact</h5>
                            <p>If you have any further questions you can contact <a tal:attributes="href string:mailto:${context/contact_email}" tal:content="context/contact_email"></a></p>
                            </tal>

                            <h5>Language of the conference</h5>
                            <p tal:content="structure context/language"></p>

                            <tal tal:condition="context/online_registration">
                            <a name="registration"></a>
                            <h2>Registration</h2>
                            <p>Please fill in this <a href="" tal:attributes="href context/online_registration">registration form</a></p>
                            </tal>
                        </div>

                        <div class="col-md-3 col-xs-12 content-sidebar">
                            <div class="macro-category">
                                <h4>When:</h4>
                                <span id="event_date_detail"></span>
                            </div>
                          <div class="macro-category pt-5" style="padding-top:15px;">
                              <h4>Where:</h4>
                              <span tal:content="data/location">location</span>
                          </div>
                          <div class="macro-category" style="padding-top:15px;">
                              <h4>Info:</h4>
                              <span tal:content="data/contact_email">contact email</span>
                          </div>
                          <div class="macro-category" style="padding-top:15px;">
                              <h4>Registration:</h4>
                              <a tal:condition="context/online_registration" tal:attributes="href context/online_registration">Online registration</a>
                          </div>
                      </div>
                    </div>
                </div>
              </div>


        </tal:def>

        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="cca-event">

          </div>
          <div role="tabpanel" class="tab-pane" id="cca-agenda">
          </div>
          <div role="tabpanel" class="tab-pane" id="cca-information">
            <p><strong>Language:</strong> <span tal:content="context/language"/></p>
            <a tal:condition="context/online_registration" tal:attributes="href context/online_registration">Online registration</a>
          </div>
        </div>

    </metal:main>

</body>
</html>
