<html
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    xml:lang="en"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="eea.climateadapt">

    <body>
        <metal:main fill-slot="main">
            <tal:main-macro metal:define-macro="content-core">
                <script src="/++theme++climateadapt/static/cca/js/keywordadmin.js"></script>

                <h1>Keywords</h1>
                <table class="table table-striped" tal:define="keys view/keyword">
                  <thead>
                    <tr>
                      <th>Keyword</th>
                      <th>Lenght</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr tal:repeat="key keys">
                      <td tal:content="key" id="admin-keywords">
                      </td>
                      <td tal:content="python: view.get_keyword_lenght(key)">
                      </td>
                      <td>
                        <button class="show_key_objects">Show</button>
                        <div class="keyword_objects">
                        </div>
                      </td>
                    </tr>
                  </tbody>
                </table>
            </tal:main-macro>
        </metal:main>
    </body>
</html>
