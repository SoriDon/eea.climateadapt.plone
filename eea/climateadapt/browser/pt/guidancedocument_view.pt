<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="en"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="example.conference">
  <body>

    <metal:main fill-slot="main">
      <tal:main-macro metal:define-macro="content-core" >

        <h2>Guidance Document</h2>
        <h1 tal:content="context/title">Title here</h1>

        <h4>Description:</h4>
        <p tal:replace="structure context/description">description here</p>

        <h4>Reference information</h4>

        <h5>Websites:</h5>
        <ul>
          <li tal:repeat="website context/websites">
            <a href="" tal:attributes="href website" tal:content="website">Website</a>
          </li>
        </ul>

        <h5>Source:</h5>
        <p tal:content="context/source">Source here</p>

        <div id="aceitem_sidebar">
          <h4>Project Documents</h4>
          <p tal:content="python:u', '.join(context.Subject())" />

          <h4>Keywords</h4>
          <p tal:content="python:u', '.join(context.Subject())" />
          <h4>Climate impacts</h4>
          <p tal:content="structure python:view.widgets['climate_impacts'].render()"/>
          <h4>Sectors</h4>
          <p tal:content="structure python:view.widgets['sectors'].render()"/>
          <h5>Countries:</h5>
          <p tal:content="structure python:view.widgets['spatial_layer'].render()"/>
        </div>

        <!-- <tal:def tal:define="sector_w python:view.widgets['sectors']" > -->
          <!--   <!&#45;&#45; <tal:widget tal:replace="structure sector_w/@@ploneform&#38;#45;render&#38;#45;widget"/> &#45;&#45;> -->
          <!--   <tal:widget tal:replace="structure sector_w/render"/> -->
          <!-- </tal:def> -->
        <!--  -->

        <div style="display:none" tal:content="python:view.w.keys()" />

      </tal:main-macro>
    </metal:main>

  </body>
</html>
