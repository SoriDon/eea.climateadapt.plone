<table class="listing-table" tal:define="brains view/brains; nr_res python: len(brains);">
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
    </tr>
  </thead>
  <tbody tal:define="
    two python: nr_res / 5;
    three python: 2 * two;
    four python: 3 * two;
    five python: 4 * two;">
    <tr tal:repeat="brain brains">
      <td tal:define="title brain/Title">
        » <img tal:condition="python: brain.getObject().featured == 1"
               src="++theme++climateadapt/static/cca/img/featured-icon.png">
          <span tal:condition="python: view.new_item(brain)"
               style="color:purple;font-size:0.8em;">NEW</span>       
        <a href="" tal:content="title" tal:attributes="href brain/getURL">» Link</a>
        - <span tal:define="text python: view.html2text(brain.long_description.raw)">
            <span tal:replace="python: text[:208-len(title)]" />...
          </span>
      </td>
      <td class="table_year_css" tal:content="python: brain.year or '' ">year</td>
    </tr>
  </tbody>
</table>
