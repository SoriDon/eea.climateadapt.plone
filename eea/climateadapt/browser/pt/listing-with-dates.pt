<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xml:lang="en"
  lang="en"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="eea.climateadapt">

  <body>
    <metal:main fill-slot="main">
      <tal:main-macro metal:define-macro="content-core">
        <div tal:define="Batch python:modules['plone.batching'].Batch;
                 b_size python:10;b_start python:0;b_start request/b_start | b_start;
                 batch python:Batch(context.results(), b_size, int(b_start), orphan=1);">

        <h2 style="border-bottom:3px solid #bdcb2e" tal:content="context/Title">All News</h2>

        <ul tal:define="items python: context.results(sort_on='effective')" style="margin-left:0">
            <li tal:repeat="item items" style="list-style: none" class="news-item">
                <h3>
                    <a href="" tal:content="item/Title" tal:attributes="href item/getURL">
                        News Title with href
                    </a>
                </h3>
                <small class="discreet" tal:content="python: item.EffectiveDate().split('T')[0]"> Date </small>
                <p tal:content="item/Description"> Description </p>
            </li>
        </ul>

        <tal:batchnavigation
            define="batchnavigation nocall:context/@@batchnavigation"
            replace="structure python:batchnavigation(batch)" />
       </div>
      </tal:main-macro>
    </metal:main>
  </body>
</html>
