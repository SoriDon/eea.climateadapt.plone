<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xml:lang="en"
  lang="en"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="eea.climateadapt">

  <body>
    <metal:main fill-slot="main">
      <tal:main-macro metal:define-macro="content-core">
        <h1 tal:content="context/Title">All News</h1>

         <div tal:define="batch python: context.results(batch=True,
                          b_start=request.get('b_start', 0),
                          b_size=10);
                          urlPrefix python: '/observatory' if 'observatory' in context.REQUEST.getURL() else '';
                          domainName python: '/'.join(context.REQUEST.getURL().split('/')[0:3])
                          "
                          >
           <tal:results repeat="result batch">
             <li class="news-item">
               <h2>
                 <a href="" tal:content="result/Title" tal:attributes="href python: urlPrefix + result.getURL().replace(domainName, '')">
                  News Title with href
                 </a>
               </h2>
               <small class="discreet" tal:content="python:result.effective.strftime('%d %b %Y')" />
               <p tal:content="result/Description"> Description </p>
             </li>
           </tal:results>

           <div metal:use-macro= "context/batch_macros/macros/navigation"/>
         </div>

      </tal:main-macro>
    </metal:main>

  </body>
</html>
