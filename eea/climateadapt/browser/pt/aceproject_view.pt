<html
  xmlns="http://www.w3.org/1999/xhtml"
  xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="en"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="example.conference">
  <body>

    <metal:main fill-slot="main">
      <tal:main-macro metal:define-macro="content-core">

        <metal:macro use-macro="context/ace_macros/macros/ace_layout">
          <div metal:fill-slot="ace-top-slot">

            <a href="" tal:attributes="href view/link_to_original">Original project</a>
            <h2>Project</h2>

            <h1>
                <span tal:content="context/acronym">Acronym here</span>
                <span>: </span>
                <span tal:content="context/title">Title here</span>
            </h1>
          </div>

          <div metal:fill-slot="ace-left-slot">
            <tal:def define="description python: view.w['abstracts'].render();
              lead context/lead;
              partners python: view.w['partners'].render();
              funding context/funding;
              websites context/websites;
              ">
              <h3>Description:</h3>
              <tal:block content="structure description"/>

              <h4>Project information</h4>

              <tal:cond condition="lead">
                <h5>Lead</h5>
                <p tal:replace="structure lead"/>
              </tal:cond>

              <tal:cond condition="partners">
                <h5>Partners</h5>
                <p tal:replace="structure partners"/>
              </tal:cond>

              <tal:cond condition="funding">
                <h5>Source of funding</h5>
                <p tal:replace="structure funding"/>
              </tal:cond>

              <h4>Reference information</h4>
              <h5>Websites:</h5>
              <ul>
                <li tal:repeat="link websites">
                  <a tal:attributes="href python:view.linkify(link)" tal:content="link">Websites here</a>
                </li>
              </ul>
            </tal:def>
          </div>

          <div metal:fill-slot="ace-right-slot">
            <h4>Keywords</h4>
            <p tal:replace="structure python: view.w['keywords'].render()"/>
            <h4>Duration</h4>
            <p tal:replace="structure context/duration"/>
            <h4>Climate impacts</h4>
            <p tal:replace="structure python:view.w['climate_impacts'].render()"/>
            <h4>Elements</h4>
            <p tal:replace="structure python:view.w['elements'].render()"/>
            <h4>Sectors</h4>
            <p tal:replace="structure python:view.w['sectors'].render()"/>
            <h4>Geographic characterization</h4>
            <p tal:replace="structure python:view.render_geochar(context.geochars)"/>
          </div>
        </metal:macro>

      </tal:main-macro>
    </metal:main>

  </body>
</html>
