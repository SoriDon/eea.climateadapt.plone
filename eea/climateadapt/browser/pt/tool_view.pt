<html
  xmlns="http://www.w3.org/1999/xhtml"
  xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="en"
  metal:use-macro="context/main_template/macros/master"
  >

  <body>
    <metal:main fill-slot="body">

      <tal:main-macro metal:define-macro="content-core">

        <metal:macro use-macro="context/ace_macros/macros/ace_layout">
          <div metal:fill-slot="title-slot">
            <div metal:use-macro="context/ace_macros/macros/title_date"></div>
          </div>

          <div metal:fill-slot="ace-left-slot">
            <h3>Description</h3>
            <p tal:replace="structure python: view.w['long_description'].render()">description here</p>

            <h4 class="reference-title">Reference information</h4>
            <h5>Websites:</h5>
            <div metal:use-macro="context/ace_macros/macros/websites"></div>

            <div tal:content="structure provider:plone.abovecontentbody" />

            <h5>Source:</h5>
            <tal:block content="structure python: view.w['source'].render()"/>

            <div metal:use-macro="context/ace_macros/macros/comments"></div>
          </div>

          <div metal:fill-slot="ace-right-slot">
            <div metal:use-macro="context/ace_macros/macros/files"></div>

            <div class="macro-category" tal:define="effective context/effective">
              <h4>Updated:</h4>
              <div tal:condition="effective">
                <span tal:replace="effective/dd" >01</span>-<span tal:replace="effective/mm">01</span>-<span tal:replace="effective/year">2000</span>
              </div>
            </div>

            <div class="macro-category" tal:condition="python:health_impacts is not None and health_impacts!='-NONSPECIFIC-'" tal:define="health_impacts context/health_impacts">
              <h4>Health impact:</h4>
              <div tal:condition="health_impacts">
                <span tal:replace="health_impacts">health impacts</span>
              </div>
            </div>

            <div class="macro-category" tal:condition="python:partner_organisations is not None and partner_organisations!='-NONE-'" tal:define="partner_organisations context/partner_organisations">
              <h4>Partner organisation:</h4>
              <div tal:condition="partner_organisations">
                <span tal:replace="partner_organisations">partner organisation</span>
              </div>
            </div>

            <div class="macro-category">
              <h4>Keywords:</h4>
              <div metal:use-macro="context/ace_macros/macros/keywords"></div>
            </div>

            <div class="macro-category">
              <h4>Climate impacts:</h4>
              <tal:block content="structure python:view.w['climate_impacts'].render()"/>
            </div>

            <div class="macro-category">
              <h4>Elements:</h4>
              <tal:block content="structure python:view.w['elements'].render()"/>
            </div>

            <div class="macro-category">
              <h4>Sectors:</h4>
              <tal:block content="structure python:view.w['sectors'].render()"/>
            </div>

            <div class="macro-category">
              <h4>Geographic characterisation:</h4>
              <div metal:use-macro="context/ace_macros/macros/geochar"></div>
            </div>

          </div>

        </metal:macro>

        <div id="viewlet-below-content-body" tal:content="structure provider:plone.belowcontentbody" tal:condition="not:ajax_load" />
      </tal:main-macro>
    </metal:main>

  </body>
</html>
