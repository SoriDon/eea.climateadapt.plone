<html xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="collective.cover">

  <body tal:define="is_compose view/is_compose_mode">
    <div class="sortable-tile tile-content" tal:condition="is_compose">
      <h4 style="margin-bottom:0.6em">Relevant AceContent Tile</h4>

      <tal:items repeat="obj view/assigned">
        <div class="list-item" style="position:relative;"
          tal:attributes="data-tile-id view/id;
          data-content-type obj/portal_type;
          data-content-uuid python:view.get_uuid(obj)">

          <h5>
            <a tal:content="obj/Title" tal:attributes="href obj/absolute_url">Title</a>
          </h5>

          <div class="visualClear"><!-- --></div>
        </div>
      </tal:items>

      <dl style="margin-top:1em">

        <dt>Element type:</dt>
        <dd tal:content="python: view.data.get('element_type')" />

        <dt>Sector:</dt>
        <dd tal:content="python: view.data.get('sector')" />

        <dt>Search type:</dt>
        <dd tal:content="python: view.data.get('search_type')" />

        <dt>Special tags: </dt>
        <dd tal:content="python: view.data.get('special_tags')" />

        <dt>Search text: </dt>
        <dd tal:content="python: view.data.get('search_text')" />

        <dt>Number of items: </dt>
        <dd tal:content="python: view.data.get('nr_items')" />
      </dl>
    </div>

    <div class="cover-richtext-tile tile-content aceitem-relevant-tile" tal:condition="not: is_compose" tal:define="assigned view/assigned">

      <div style="margin-top:0.2em; margin-right: 0.6em;float:left" class="hiddenForAnon">
        <a href=""
          class="pat-plone-modal"
          tal:attributes="href string:#info${view/id}">
          <!-- <img src="/++theme++climateadapt/static/cca/img/vergrootglas.png" /> -->
          <i class="fa fa-search"></i>
        </a>
        <div tal:attributes="id string:info${view/id}" style="display:none" >
          <h1>Relevant tile info</h1>
          <dl>
            <dt>Element type:</dt>
            <dd tal:content="python: view.data.get('element_type')" />

            <dt>Sector:</dt>
            <dd tal:content="python: view.data.get('sector')" />

            <dt>Search type:</dt>
            <dd tal:content="python: view.data.get('search_type')" />

            <dt>Special tags: </dt>
            <dd tal:content="python: view.data.get('special_tags')" />

            <dt>Search text: </dt>
            <dd tal:content="python: view.data.get('search_text')" />

            <dt>Number of items: </dt>
            <dd tal:content="python: view.data.get('nr_items')" />
          </dl>
        </div>
      </div>

      <h2><span tal:content="python: view.data.get('title')">Title here</span></h2>

      <h3 style="display:none">Relevant tile</h3>
      <ul tal:condition="assigned" class="list-items">
        <li tal:repeat="obj assigned">
          <a href="" tal:attributes="href obj/absolute_url" tal:content="obj/Title">Title here</a>
        </li>
      </ul>
      <ul tal:condition="not: assigned" class="list-items">
        <li tal:repeat="brain view/items">
          <a href="" tal:attributes="href brain/getURL" tal:content="brain/Title">Title here</a>
        </li>
      </ul>
      <div class="tile-footer">
        <a href="" tal:attributes="href view/view_more_url" tal:condition="view/view_more">View more</a>

        <!-- <div tal:condition="python:view.data.get('show_share_btn') or view.show_share_btn()">
        <a href="/share-your-info" >
          <button>Share information</button>
        </a>
      </div> -->
      </div>
    </div>
  </body>
</html>
