<html xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="collective.cover">

  <body>
    <tal:define tal:define="compose_mode view/is_compose_mode;">
      <p tal:condition="compose_mode" i18n:translate="">
        Please edit the tile.
      </p>
      <div tal:condition="not:compose_mode"
           class="cover-richtext-tile tile-content" tal:define="fields view/get_configured_fields">
		<select id="riskSelect" name="riskSelect">
			<option value="ALL">All risks</option>
			<option value="EXTREMETEMP">Extreme Temperatures</option>
			<option value="WATERSCARCE">Water Scarcity</option>
			<option value="FLOODING">Flooding</option>
			<option value="SEALEVELRISE">Sea Level Rise</option>
			<option value="DROUGHT">Droughts</option>
			<option value="STORM">Storms</option>
			<option value="ICEANDSNOW">Ice and Snow</option>
		</select>

		<select id="sectorSelect" name="sectorSelect">
			<option value="ALL">All sectors</option>
			<option value="AGRICULTURE">Agriculture and Forest</option>
			<option value="BIODIVERSITY">Biodiversity</option>
			<option value="COASTAL">Coastal areas</option>
			<option value="DISASTERRISKREDUCTION">Disaster Risk Reduction</option>
			<option value="FINANCIAL">Financial</option>
			<option value="HEALTH">Health</option>
			<option value="INFRASTRUCTURE">Infrastructure</option>
			<option value="MARINE">Marine and Fisheries</option>
			<option value="WATERMANAGEMENT">Water management</option>
		</select>

		<div id='csst_element'></div>

		<script type='text/javascript' src="http://ecn.dev.virtualearth.net/mapcontrol/mapcontrol.ashx?v=6.2&amp;mkt=en-us"></script>
		<script type="text/javascript" src="http://serverapi.arcgisonline.com/jsapi/arcgis/3.4compact"></script>
		<script type="text/javascript" src='++resource++eea.climateadapt/js/ext-base.js'></script>
		<script type="text/javascript" src='++resource++eea.climateadapt/js/ext-all.js'></script>
		<script type='text/javascript' src='++resource++eea.climateadapt/js/OpenLayers.js'></script>
		<script type="text/javascript" src='++resource++eea.climateadapt/js/GeoExt.js'></script>
		<script type="text/javascript" src="++resource++eea.climateadapt/js/chm/CHM.js"></script>
		<script type="text/javascript" src="++resource++eea.climateadapt/js/chm/Point.js"></script>
		<script type="text/javascript" src="++resource++eea.climateadapt/js/chm/Location.js"></script>
		<script type="text/javascript" src="++resource++eea.climateadapt/js/chm/LocationControl.js"></script>
		<script type="text/javascript" src="++resource++eea.climateadapt/js/chm/layer/vector/CasestudiesVector.js"></script>
		<script type="text/javascript" src="++resource++eea.climateadapt/js/chm/control/locator/candidate/CandidatesStore.js"></script>
		<script type="text/javascript" src="++resource++eea.climateadapt/js/chm/control/locator/Locator.js"></script>
		<script type="text/javascript" src="++resource++eea.climateadapt/js/chm/control/grid/GridControl.js"></script>
		<script type="text/javascript" src="++resource++eea.climateadapt/js/chm/control/options/OptionsControl.js"></script>
		<script type="text/javascript" src="++resource++eea.climateadapt/js/chm/control/legend/LegendControl.js"></script>
		<script type="text/javascript" src="++resource++eea.climateadapt/js/chm/control/locator/LocatorControl.js"></script>
		<script type="text/javascript" src="++resource++eea.climateadapt/js/chm/control/map/MapControl.js"></script>
		<script type="text/javascript" src="++resource++eea.climateadapt/js/chm/control/map/Map.js"></script>
		<script type="text/javascript" src="++resource++eea.climateadapt/js/chm/Application.js"></script>
		<script type="text/javascript" src="++resource++eea.climateadapt/js/chm/Session.js"></script>
		
                <script>
                    (function () {
                        var urls, i, link, urls_length,
                        urls = ["http://serverapi.arcgisonline.com/jsapi/arcgis/3.4/js/esri/css/esri.css",
                                "++resource++eea.climateadapt/css/ext-all.css",
                                "++resource++eea.climateadapt/css/portlet.css",
                                "++resource++eea.climateadapt/css/tooltip.css"
                               ];
                        urls_length = urls.length;
                        for (i=0; i<urls_length; i++) {
                            link = document.createElement("link");
                            link.rel = "stylesheet";
                            link.href = urls[i];
                            document.head.appendChild(link);
                        }
                    })();
                </script>

		<script>
			var proxyUrl = '';

			var geoserverUrl = 'http://localhost/geoserver/';

			var wfs = 'wfs';

			var wms = 'wms';

			var featureNamespace = 'http://climate-adapt.eea.europa.eu';

			var areasFeatureType = 'biogeo_2008';

			var areasLayer = 'chm:biogeo_2008';

			var caseStudiesFeatureType = 'casestudies';

			var geometryColumn = 'geom';

			var areaColumn = 'area';

			var locatorUrl = 'http://localhost/geocode/arcgis/rest/services/World/GeocodeServer';

			var locatorKey = 'Ao9qujBzDtg-nFiusTjt5VQ9x2NJB2wAD7YCRjaPz7hQQjxdFcl24tyhOwCDCIrw';

			var zoomLevel = 2;

			var root = '';
		</script>
		<script type="text/javascript" src="++resource++eea.climateadapt/js/javascript.js"></script>
      </div>
    </tal:define>
  </body>
</html>
