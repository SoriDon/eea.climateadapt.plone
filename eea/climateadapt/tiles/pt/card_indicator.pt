<div class="ui card indicator">
  <div class="image">
    <a href="" tal:attributes="href context/absolute_url" >
      <img tal:condition="python: getattr(context, 'image', None)" tal:attributes="src string:${context/absolute_url}/image_mini" />
      <div tal:condition="python: not getattr(context, 'image', None)" class="placeholder" />
    </a>
  </div>
  <div class="card-content">
    <h4 class="card-header" >
      <a href="" tal:attributes="href context/absolute_url" tal:content="context/Title">
        Matthew
      </a>
    </h4>
  </div>
  <div class="card-extra">
    <div class="year">
      <strong>Year:&nbsp;</strong>
      <span class="year" tal:content="python: getattr(context, 'publication_date') and context.publication_date.year or ''"></span>
    </div>
    <div class="source"
      tal:define="origin context/origin_website | nothing;
          origin python: origin and origin[0] or None">
      <strong>Source:&nbsp;</strong>
      <a tal:condition="python: origin == 'EEA'" href="https://eea.europa.eu">EEA</a>
      <a tal:condition="python: origin == 'Lancet Countdown'" href="https://www.lancetcountdown.org/">Lancet Countdown</a>
    </div>
  </div>
</div>
