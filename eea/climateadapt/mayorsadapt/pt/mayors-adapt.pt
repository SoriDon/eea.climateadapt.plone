<metal:use-macro use-macro="context/main_template/macros/master">
  <metal:fill-slot fill-slot="javascript_head_slot">
    <script>
      var dojoConfig = {
        parseOnLoad: true
      };
    </script>
    <script src="https://js.arcgis.com/3.13compact/"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="/++theme++climateadapt/static/cca/js/mayoradaptload.js"></script>

    <script type="text/javascript" src="/++resource++collective.js.bootstrap/js/bootstrap.min.js"></script>
  </metal:fill-slot>

  <metal:fill-slot fill-slot="content-core">
    <link href="https://js.arcgis.com/3.13/dijit/themes/tundra/tundra.css" rel="stylesheet"/>
    <link href="https://js.arcgis.com/3.13/esri/css/esri.css" rel="stylesheet"/>
    <style type="text/css">
      /* <![CDATA[ */
      #mapDiv,
      .map.container {
        padding: 0;
        margin: 0;
        height: 100%;
      }
      #legendDiv {
        background-color: #fff;
        position: absolute !important;
        z-index: 99;
        top: 10px;
        right: 20px;
        display: none;
        width: 300px;
        height: 300px;
        overflow: auto;
      }
      #linkCity {
        font-weight: bold;
        color: black;
        text-decoration: underline;
      }
      #registerDiv {
        height: 100px;
        width: 30%;
        float: left;
      }
      #contenidoCombos {
        position: absolute;
        top: 60;
        right: 10px;
        height: 100%;
        width: 300px;
      }
      #contenidoMapa {
        position: absolute;
        top: 60;
        left: 0;
        right: 320px;
        height: 100%;
      }
      #contenido {
        position: relative;
        height: 500px;
        margin-top: 20px;
      }
      #HomeButton {
        position: absolute;
        top: 95px;
        left: 20px;
        z-index: 50;
      }
      #LegendButton {
        position: absolute;
        top: 135px;
        left: 20px;
        z-index: 50;
      }
      #Mapsearch {
        display: block;
        position: relative;
        z-index: 2;
        top: 20px;
        left: 74px;
      }
      .dijitTooltipContainer {
        font-size: smaller !important;
      }
      #xButton {
        position: absolute;
        z-index: 500;
        display: none;
        top: 10px;
        right: 23px;
        cursor: pointer;
      }
      #hover-content {
        display: none;
        top: -150px;
        z-index: 99;
      }
      #disclaimer:hover #hover-content {
        display: block;
      }
      #disclaimer {
        margin-top: 1em;
      }
      /* ]]>*/
    </style>

    <div tal:condition="context/text|nothing" tal:replace="structure context/text/output">
      <p i18n:translate="">Here you can find an overview of your personally created Climate-Adapt content.</p>
    </div>

    <div class="columns-2" id="contenido">
      <div id="contenidoMapa">
        <!--<div id="Mapsearch"></div>-->
        <div id="mapDiv" style="height:450px">
          <div id="xButton">
            <b>
              <a onclick="toogleLegend()" i18n:ignore="">X</a>
            </b>
          </div>

          <div id="legendDiv">&nbsp;</div>

          <div id="HomeButton">&nbsp;</div>

          <div id="LegendButton"><img onclick="toogleLegend()" src="/++theme++climateadapt/static/cca/img/legendMA.png" style="width: 34px;height: 34px;"/></div>
        </div>
      </div>

      <div id="contenidoCombos">
        <h2 class="portlet-title">
          <span class="portlet-title-text" i18n:translate="">Filter by zone</span>
        </h2>
        <span i18n:translate="">Choose a Country:</span><br/>
        <select id="country" style="width:100% ">
          <option value="" i18n:translate="">All</option>
        </select><br/>
        <span i18n:translate="">Choose a City:</span><br/>
        <select id="cityCountry" style="width:100% ">
          <option value="" i18n:translate="">All</option>
        </select><br/>
        <!-- <div style="text-align:center" class="bluebuttondiv"> <a id="zoneButton" style="float:none;margin-top:10px;margin-bottom:10px" class="bluebutton" >Filter</a> </div> -->

        <h2 class="portlet-title">
          <span class="portlet-title-text" i18n:translate="">Filter by criteria</span>
        </h2>
        <span i18n:translate="">Climate Impacts:</span><br/>
        <select id="impacts" style="width:100%">
          <option value="" i18n:translate="">All</option>
        </select><br/>
        <span i18n:translate="">Adaptation Sectors:</span><br/>
        <select id="sectors" style="width:100%">
          <option value="" i18n:translate="">All</option>
        </select><br/>
        <span i18n:translate="">Stage of Implementation:</span><br/>
        <select id="stage" style="width:100%">
          <option value="" i18n:translate="">All</option>
        </select><br/>
        <span i18n:translate="">Choose a City:</span><br/>
        <select id="city" style="width:100%">
          <option value="" i18n:translate="">All</option>
        </select>

        <div id="disclaimer">
          <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
          <span i18n:translate="">[Browser Compatibility]</span>
          <div id="hover-content" i18n:translate="">We recommend using Mozilla Firefox or Google Chrome as your Internet browser to optimize the use of the map viewer. Using Microsoft Internet Explorer browser, particularly old versions, may cause some of our web site's
            features and services to operate incorrectly.</div>
        </div>
      </div>
    </div>
  </metal:fill-slot>
</metal:use-macro>
